POSTGRES_USER=hydra
POSTGRES_PASSWORD=secret
POSTGRES_DB=hydra
SERVE_PARAMS=--dangerous-force-http
WEBFINGER_OIDC_DISCOVERY_AUTH_URL=http://localhost:9000/oauth2/auth
WEBFINGER_OIDC_DISCOVERY_TOKEN_URL=http://hydra-host:4444/oauth2/token
